{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Current TS File",
        "type": "node",
        "request": "launch",
        "args": ["${workspaceFolder}/src/main.ts"],
        "runtimeArgs": [
          "--nolazy", 
          "-r",
          "ts-node/register",
          "-r",
          "tsconfig-paths/register"
        ],
        "sourceMaps": true,
        "cwd": "${workspaceRoot}",
        "protocol": "inspector",
        "env": {"NODE_ENV":"development"},
        "console": "integratedTerminal"
      }
    ]
  }